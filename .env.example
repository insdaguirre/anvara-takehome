# Database (port 5498 to avoid conflicts)
DATABASE_URL=postgresql://postgres:postgres@localhost:5498/anvara_sponsorships

# Backend (port 4291)
BACKEND_PORT=4291
# Comma-separated CORS allowlist (required in production)
CORS_ALLOWED_ORIGINS=http://localhost:3847
# Global API rate limit configuration (applied when NODE_ENV=production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=120

# Frontend (port 3847)
NEXT_PUBLIC_API_URL=http://localhost:4291
# Optional: GA4 Measurement ID (leave empty to disable analytics integration)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Better Auth
BETTER_AUTH_SECRET=use-openssl-rand-hex-32-to-generate-this
BETTER_AUTH_URL=http://localhost:3847

# RAG / AI Search
OPENAI_API_KEY=
RAG_ENABLED=false
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_LLM_MODEL=gpt-4o-mini
RAG_TOP_K=10
RAG_SIMILARITY_THRESHOLD=0.3
RAG_LLM_TIMEOUT_MS=10000
RAG_RATE_LIMIT_PER_MINUTE=10

# Agent Assistant
AGENT_ENABLED=false
AGENT_RATE_LIMIT_PER_MINUTE=20
